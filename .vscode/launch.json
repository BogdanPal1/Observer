    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "g++-8 - Отладка активного файла",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/app/analyzer",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/app/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}