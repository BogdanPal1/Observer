{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-8 сборка активного файла",
            "command": "/usr/bin/g++-8",
            "args": [
                "-g",
                "-I${workspaceFolder}/include/",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}